{
    "private": true,
    "workspaces": [
        "client",
        "server",
        "api"
    ],
    "scripts": {
        "dev:server": "nodemon --config server/nodemon.json",
        "dev:client": "cd client && yarn start",
        "dev:api": "tsc -b -w api",
        "dev": "run-p -snl dev:**",
        "clean:server": "tsc -b --clean server",
        "clean:api": "tsc -b --clean api",
        "clean": "run-p -snl clean:**",
        "force-clean": "rimraf {client,server,api}/build",
        "build:api": "tsc -b api",
        "build:client": "yarn build:api && cd client && yarn build",
        "build:server": "yarn build:api && tsc -b server",
        "build": "run-s -snl build:**",
        "start:server": "node server",
        "lint:server": "tslint -p server/tsconfig.json",
        "lint:api": "tslint -p api/tsconfig.json",
        "lint:client": "tslint -p client/tsconfig.json",
        "lint": "run-s -csnl build:api lint:**",
        "test": "echo No test runner installed for this project"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.6.3",
        "tslint": "^5.16.0",
        "typescript": "^3.4.3"
    },
    "dependencies": {
        "nodemon": "^1.18.11"
    }
}
