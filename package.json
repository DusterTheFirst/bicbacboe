{
    "private": true,
    "workspaces": [
        "client",
        "server",
        "api"
    ],
    "scripts": {
        "dev:server": "nodemon --config server/nodemon.json",
        "dev:client": "cd client && yarn start",
        "clean:server": "tsc -b --clean server",
        "clean:api": "tsc -b --clean api",
        "clean": "run-p -s clean:**",
        "force-clean": "rimraf {client,server,api}/build",
        "build:client": "cd client && yarn build",
        "build:server": "tsc -b server",
        "build:api": "tsc -b api",
        "build": "run-p -cs build:**",
        "start:server": "node server",
        "lint:server": "tslint -p server/tsconfig.json",
        "lint:api": "tslint -p api/tsconfig.json",
        "lint:client": "tslint -p client/tsconfig.json",
        "lint": "run-p -cs lint:**"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.6.3",
        "tslint": "^5.16.0",
        "typescript": "^3.4.3"
    }
}
